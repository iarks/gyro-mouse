<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/buttonAUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_up_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <Button
            android:id="@+id/buttonEscape"
            android:layout_width="70dp"
            android:padding="@dimen/fab_margin"
            android:layout_height="wrap_content"
            android:text="@string/escape"
            android:textColor="@color/yatse_accent"/>
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/buttonARight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_24dp"/>
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/buttonADown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_down_24dp" />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/buttonALeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_24dp"
            />
        <Button
            android:id="@+id/buttonWin"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:text="@string/windows"
            android:textColor="@color/yatse_accent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leftMouse"
            android:textColor="@color/yatse_accent"/>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/buttonMouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_settings_overscan_24dp" />

        <Button
            android:id="@+id/buttonRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rightMouse"
            android:textColor="@color/yatse_accent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/buttonScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_swap_vert_24dp" />

    </LinearLayout>






</LinearLayout>
